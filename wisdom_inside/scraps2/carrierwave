

# how to have different storage in test enviroment for carrierwave

    # config/initializers/carrierwave.rb
    if Rails.env.test? or Rails.env.cucumber?
      CarrierWave.configure do |config|
        config.storage = :file
        config.enable_processing = false
      end
    else
      CarrierWave.configure do |config|
        config.storage = :fog
      end
    end


